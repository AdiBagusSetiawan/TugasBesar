import java.util.Scanner;



public class HitungKondisiDanSarana extends HitungRuang{
	public HitungKondisiDanSarana(){}
	Scanner input = new Scanner(System.in);

	@Override
	void inputKondisiRuangDanSarana() {
		System.out.println("Jumlah Steker : ");
		super.setJumlahsteker(input.nextInt());
		
		System.out.println("Kondisi Steker : ");
		super.setKondisisteker(input.nextInt());
		
		System.out.println("Posisi Steker : ");
		super.setPosisisteker(input.nextInt());
		
		System.out.println("Jumlah Kabel LCD : ");
		super.setJumlahkabellcd(input.nextInt());
		
		System.out.println("Kondisi Kabel LCD : ");
		super.setKondisikabellcd(input.nextInt());
		
		System.out.println("Posisi Kabel LCD : ");
		super.setPosisikabel(input.nextInt());
		
		System.out.println("Jumlah Lampu : ");
		super.setJumlahlampu(input.nextInt());
		
		System.out.println("Kondisi Lampu : ");
		super.setKondisilampu(input.nextInt());
		
		System.out.println("Posisi Lampu : ");
		super.setPosisilampu(input.nextInt());
		
		System.out.println("Jumlah Kipas Angin : ");
		super.setJumlahkipas(input.nextInt());
		
		System.out.println("Kondisi Kipas Angin : ");
		super.setKondisikipas(input.nextInt());
		
		System.out.println("Posisi Kipas : ");
		super.setPosisikipas(input.nextInt());
		
		System.out.println("Jumlah AC : ");
		super.setJumlahac(input.nextInt());
		
		System.out.println("Kondisi AC : ");
		super.setKondisiac(input.nextInt());
		
		System.out.println("Posisi AC : ");
		super.setPosisiac(input.nextInt());
		
		System.out.println("SSID : ");
		super.setSsid(input.nextInt());
		
		System.out.println("Bandwidth : ");
		super.setBanwidth(input.nextInt());
		
		System.out.println("Jumlah CCTV : ");
		super.setJumlahcctv(input.nextInt());
		
		System.out.println("Kondisi CCTV : ");
		super.setKondisicctv(input.nextInt());
		
		System.out.println("Posisi CCTV : ");
		super.setPosisicctv(input.nextInt());

	}
	
	@Override
	String analisisRuangDanSarana(){
		sesuai=0;
        if(super.getJumlahsteker()>=4){
            System.out.println("jumlah stop kontak SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Jumlah Stop kontak TIDAK SESUAI");
        }
        if(super.getJumlahsteker()>=4){
            System.out.println("kondisi steker BAIK");
            sesuai++;
        }
        else{
            System.out.println("Kondisi steker TIDAK BAIK");
        }
        if(super.getPosisisteker()==1 || super.getPosisisteker()==2){
            System.out.println("posisi steker SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Posisi steker TIDAK SESUAI");
        }
        if(sesuai==3){
            totSesuai++;
            return ("Analisis Kelistrikan: SESUAI");
        }
        else{
            return ("Analisis Kelistrikan: TIDAK SESUAI");
        }
    }
	
	@Override
    String analisisLCD(){
        sesuai=0;
        if(super.getJumlahkabellcd()>=1){
            System.out.println("jumlah kabel LCD SESUAI");
            sesuai++;
        }
        else{
            System.out.println("jumlah kabel LCD TIDAK SESUAI");
        }
        if(super.getKondisikabellcd()==1){
            System.out.println("kondisi kabel LCD SESUAI");
            sesuai++;
        }
        else{
            System.out.println("kondisi kebel LCD TIDAK SESUAI");
        }
        if(super.getPosisikabel()==1){
            System.out.println("Posisi kabel LCD SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Posisi kabel LCD TIDAK SESUAI");
        }
        if(sesuai==3){
            totSesuai++;
            return ("Analisis LCD: SESUAI");
        }
        else{
            return ("Analisis LCD: TIDAK SESUAI");
        }
    }
    
	@Override
    String analisisLampu(){
        sesuai=0;
        if(super.getJumlahlampu()>=18){
            System.out.println("Jumlah lampu SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Jumlah lampu TIDAK SESUAI");
        }
        if(super.getKondisilampu()>=18){
            System.out.println("Kondisi lampu SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Kondisi lampu TIDAK SESUAI");
        }
        if(super.getPosisilampu()==1){
            System.out.println("posisi lampu SESUAI");
            sesuai++;
        }
        else{
            System.out.println("posisi lampu TIDAK SESUAI");
        }
        if(sesuai==3){
            totSesuai++;
            return ("Analisis Lampu: SESUAI");
        }
        else{
            return ("Analisis Lampu: TIDAK SESUAI");
        }
    }
	
	@Override
    String analisisKipasAngin(){
        sesuai=0;
        if(super.getJumlahkipas()>=2){
            System.out.println("Jumlah kipas angin SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Jumlah kipas angin TIDAK SESUAI");
        }
        if(super.getKondisikipas()>=2){
            System.out.println("Kondisi kipas angin SESUAI");
            sesuai++;
        }
        else{
            System.out.println("KOndisi kipas angin TIDAK SESUAI");
        }
        if(super.getPosisikipas()==1 || super.getPosisikipas()==2){
            System.out.println("Posisi kipas angin SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Posisi kipas angin TIDAK SESUAI");
        }
        if(sesuai==3){
            totSesuai++;
            return ("Analisis Kipas Angin: SESUAI");
        }
        else{
            return ("Analisis Kipas Angin: TIDAK SESUAI");
        }
    }
	
	@Override
    String analisisAC(){
        sesuai=0;
        if(super.getJumlahac()>=1){
            System.out.println("jumlah AC SESUAI");
            sesuai++;
        }
        else{
            System.out.println("jumlah AC TIDAK SESUIA");
        }
        if(super.getKondisiac()==1){
            System.out.println("Kondisi AC SESUIA");
            sesuai++;
        }
        else{
            System.out.println("kondidi AC TIDAK SESUAI");
        }
        if(super.getPosisiac()==1|| super.getPosisiac()==2){
            System.out.println("Posisi AC SESUAI");
            sesuai++;
        }
        else{
            System.out.println("Posisi AC TIDAK SESUAI");
        }
        if(sesuai==3){
            totSesuai++;
            return ("Analisis AC: SESUAI ");
        }
        else{
            return ("Analisis AC: TIDAK SESUAI ");
        }
    }
	
	 @Override
	    String analisisInternet(){
	        sesuai=0;
	        if(super.getSsid()==1){
	            System.out.println("SSID SESUAI");
	            sesuai++;
	        }
	        else{
	            System.out.println("SSID TIDAK SESUAI");
	        }
	        if(super.getBanwidth()==1){
	            System.out.println("bandwidth SESUAI");
	            sesuai++;
	        }
	        else{
	            System.out.println("bandwidth TIDAK SESUAI");
	        }
	        if(sesuai==2){
	            totSesuai++;
	            return ("Analisis Interner: SESUAI");
	        }
	        else{
	            return ("Analisis Interner: TIDAK SESUAI");
	        }
	}
	    
	 @Override
	    String analisisCCTV(){
	        sesuai=0;
	        if(super.getJumlahcctv()==2){
	            System.out.println("Jumlah CCTV SESUAI");
	            sesuai++;
	        }
	        else{
	            System.out.println("Jumlah CCTV TIDAK SESUAI");
	        }
	        if(super.getKondisicctv()==2){
	            System.out.println("Kondisi CCTV SESUAI");
	            sesuai++;
	        }
	        else{
	            System.out.println("Kondisi CCTV TIDAK SESUAI");
	        }
	        if(super.getPosisicctv()==1|| super.getPosisicctv()==2){
	            System.out.println("Posisi CCTV SESUIA");
	            sesuai++;
	        }
	        else{
	            System.out.println("Posisi CCTV TIDAK SESUAI");
	        }
	        if(sesuai==3){
	            totSesuai++; 
	            return ("Analisis CCTV: SESUAI");
	        }
	        else{
	            return ("Analisis CCTV: TIDAK SESUAI");
	        }
	}

	void inputLingkunganRuanKelas() {
